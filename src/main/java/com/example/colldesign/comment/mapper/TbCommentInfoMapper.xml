        <result column="view_matrix" property="viewMatrix"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , message, element_occurrences, element_query, angle, camera_viewport, is_perspective, view_matrix
    </sql>

</mapper>