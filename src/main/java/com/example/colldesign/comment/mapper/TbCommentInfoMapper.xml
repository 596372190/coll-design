<mapper namespace="com.example.colldesign.comment.dao.TbCommentInfoMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.colldesign.comment.model.TbCommentInfo">
        <result column="id" property="id"/>
        <result column="message" property="message"/>
        <result column="element_occurrences" property="elementOccurrences"/>
        <result column="element_query" property="elementQuery"/>
        <result column="angle" property="angle"/>
        <result column="camera_viewport" property="cameraViewport"/>
